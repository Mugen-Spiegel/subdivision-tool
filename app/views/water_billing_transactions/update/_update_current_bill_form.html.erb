<!-- Button trigger modal -->
<button type="button" style="cursor:pointer;" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#newMotherBill<%=water_billing_transaction.id%>">
Update Current Reading
</button>

<!-- Modal -->
<div class="modal fade" id="newMotherBill<%=water_billing_transaction.id%>" tabindex="-1" aria-labelledby="newMotherBillLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newMotherBillLabel">Update Current Reading</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>  
            <div class="modal-body">
                <%= form_with(model: water_billing_transaction, id: "currentreading_#{water_billing_transaction.id}", step: :any, data: { action:"WaterBillingTransactions#updateCurrentReading" } ) do |form| %>
                    <div class="row">
                        <div class="col">
                            <%= form.label :current_reading, "Current Reading:" %>
                            <%= form.number_field :current_reading, { id: "water_transaction_current_reading#{water_billing_transaction.id}" ,class:"form-control", placeholder:"Current Reading"} %>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <%= form.submit "Submit", {class:"btn btn-primary", data:{bs_dismiss: "modal"}} %>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
