<!-- Button trigger modal -->
<button type="button" style="cursor:pointer;" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updatePayment<%=water_billing_transaction.id%>">
Update Payment
</button>

<!-- Modal -->
<div class="modal fade" id="updatePayment<%=water_billing_transaction.id%>" tabindex="-1" aria-labelledby="updatePaymentLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updatePaymentLabel">Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>  
            <div class="modal-body">
                <%= form_with(model: water_billing_transaction, id: "payment_#{water_billing_transaction.id}" ,class:"row", data: { action:"WaterBillingTransactions#updatePayment" } ) do |form| %>
                    <div class=" form-switch">
                        <input class="form-check-input" id="<%= water_billing_transaction.id %>_<%= water_billing_transaction.total_payable%>" data-action="WaterBillingTransactions#exact_amount" type="checkbox" id="exact_amount">
                        <label class="form-check-label" for="exact_amount">Exact Amount?</label>
                        <%= form.text_field :paid_amount, { id: "water_billing_payment#{water_billing_transaction.id}" ,class:"form-control", placeholder:"Current Reading"} %>
                    </div>
                    <div class="modal-footer">
                        <%= form.submit "Submit",  {class:"btn btn-primary", data:{bs_dismiss: "modal"}} %>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
