{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "repo": "Mugen-Spiegel/subdivision-tool"
      }
    },
    "deploy": {
      "numReplicas": 1,
      "sleepApplication": false,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    },
    "start": {
        "cmd": "bundle exec bin/rails db:create && bundle exec bin/rails db:migrate && bundle exec bin/rails db:seed && bundle exec bin/rails server"
    }
  }